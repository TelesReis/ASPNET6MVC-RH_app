@model MvcMovie.Models.ModeloCandidato


@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Candidato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <asp:ScriptManager ID="asm" runat="server" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="candidato.nome" class="control-label"></label>
                <input asp-for="candidato.nome" class="form-control" />
                <span asp-validation-for="candidato.nome" class="text-danger"></span>
                
            </div>
         <div class="form-group">
                <select class="form-control" asp-for="candidato.vaga_id" asp-items="@ViewBag.Vagas" >
                     <option>Please select one</option>
                </select> 
        </div>
        <div class="form-group">
                <select class="form-control" asp-for="tecSelecionadas" asp-items="@ViewBag.Tecnologias" >
                </select> 
        </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
